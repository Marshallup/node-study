<h1 class="center-align">Курсы</h1>

{{#if courses.length}}
    <div class="row">
    {{#each courses}}
        <div class="col s12 m7 offset-m3">
            <div class="card">
                <div class="card-image">
                    <img src="{{img}}" alt="{{title}}">
                </div>
                <div class="card-content">
                    <span class="card-title">
                        {{title}}
                    </span>
                    <p class="price">
                        {{price}}
                    </p>
                </div>
                <div class="card-action actions">
                    <a href="/courses/{{_id}}" target="_blank">Открыть курс</a>

                    {{#if @root.isAuth}}
                        {{#ifeg userId._id @root.userId }}
                            <a href="/courses/{{_id}}/edit?allow=true" target="_blank">Редактировать курс</a>
                        {{/ifeg}}
                        <form action="/card/add" method="POST">
                            <input type="hidden" name="_csrf" value="{{@root.csrf}}">

                            <input type="hidden" name="id" value="{{_id}}">
                            <button type="submit" class="btn btn-primary">
                                Купить
                            </button>
                        </form>
                    {{/if}}
                </div>
            </div>
        </div>
    {{/each}}
    </div>
{{else}}
    <p>Курсов пока нет</p>
{{/if}}