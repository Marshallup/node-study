<div class="auth">
    <div class="row">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab col s6">
                    <a class="active" href="#login">Войти</a>
                </li>
                <li class="tab col s6"><a href="#reg">Регистрация</a></li>
            </ul>
        </div>
        <div id="login" class="col s6 offset-s3">
            {{#if loginError}}
                <p class="alert">
                    {{loginError}}
                </p>
            {{/if}}
            <h1 class="text-center">Войти в магазин</h1>
            <form action="/auth/login" method="POST">

                <input type="hidden" name="_csrf" value="{{csrf}}">

                <div class="input-field">
                    <input name="email" id="title" type="email" class="validate" required>
                    <label for="email">Почта</label>
                    <span class="helper-text" data-error="Введите почту"></span>
                </div>

                <div class="input-field">
                    <input name="password" id="password" type="password" class="validate" required>
                    <label for="password">Пароль</label>
                    <span class="helper-text" data-error="Введите пароль"></span>
                </div>

                <button type="submit" class="btn btn-wrapper">
                    Войти
                </button>
                <p>
                    <a href="/auth/reset">
                        Забыли пароль ?
                    </a>
                </p>

            </form>
        </div>
        <div id="reg" class="col s6 offset-s3">
            {{#if registerError}}
                <p class="alert">
                    {{registerError}}
                </p>
            {{/if}}
            <h1 class="text-center">Создать аккаунт</h1>
            <form action="/auth/register" method="POST">

                <input type="hidden" name="_csrf" value="{{csrf}}">

                <div class="input-field">
                    <input name="remail" id="title" type="email" class="validate" required>
                    <label for="remail">Почта</label>
                    <span class="helper-text" data-error="Введите почту"></span>
                </div>

                <div class="input-field">
                    <input name="name" id="title" type="text" class="validate" required>
                    <label for="name">Имя</label>
                    <span class="helper-text" data-error="Введите имя"></span>
                </div>

                <div class="input-field">
                    <input name="rpassword" id="password" type="password" class="validate" required>
                    <label for="rpassword">Пароль</label>
                    <span class="helper-text" data-error="Введите пароль"></span>
                </div>

                <div class="input-field">
                    <input name="confirm" id="password" type="password" class="validate" required>
                    <label for="confirm">Пароль еще раз</label>
                    <span class="helper-text" data-error="Введите пароль"></span>
                </div>

                <button type="submit" class="btn btn-wrapper">
                    Зарегистрироваться
                </button>

            </form>
        </div>
    </div>
</div>