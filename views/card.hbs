<h1>Корзина</h1>
{{#if card.length}}
    <div id="card">
        <table>
            <thead>
            <tr>
                <th>Название</th>
                <th>Кол-во</th>
                <th>Действия</th>
            </tr>
            </thead>


            <tbody>
            {{#each card}}
                <tr>
                    <td>{{title}}</td>
                    <td>{{count}}</td>
                    <td>
                        <button data-csrf="{{@root.csrf}}" data-id="{{id}}" class="btn btn-small js-remove">
                            Удалить
                        </button>
                    </td>
                </tr>
            {{/each}}
            </tbody>

        </table>

        <p>
            <strong>
                Цена:
            </strong>
            <span class="price">
                {{price}}
            </span>
        </p>

        <form action="/orders" method="POST">
            <input type="hidden" name="_csrf" value="{{csrf}}">

            <button type="submit" class="btn">
                Сделать заказ
            </button>
        </form>
    </div>

{{else}}
    <p>Корзина пуста!</p>
{{/if}}